{
  "name": "Chrome Extension with React & Webpack",
  "options_page": "options.html",
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "backgroundContextMenus.bundle.js", 
      "eventPage.bundle.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*", "<all_urls>"],
    "js": [
      "browser-polyfill.js", 
      "contentScript.bundle.js"
    ]
  }],
  "permissions": [
    "contextMenus",
    "identity"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}